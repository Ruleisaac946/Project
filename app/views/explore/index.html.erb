<head>
    <%= stylesheet_link_tag 'post' %>
    <%= javascript_include_tag 'explore_page' %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
</head>
<h1>This will be the explore page guys!</h1>
<%= form_tag("/explore", method: "GET") do %>
  <%= label_tag(:search_by_user, "Search by User") %>
  <%= text_field_tag(:search_by_user, params[:search_by_user]) %>
  <%= submit_tag("Search") %>
<% end %>

<body>
    <% @posts.each do |post| %>
        <div class = "post card mb-3">
            <%= post.content %>
            <%= image_tag post.picture if post.picture.attached? %>
            <div class="butons">
                <button class="heart-btn" onclick="toggleHeart(this)"><i class="bi bi-heart"></i></button>
                <button class="bi bi-chat" onclick="window.location='<%= comment_path(post) %>'"></button>
                <button><i class="bi bi-arrow-repeat"></i></button>
                <button class="save-btn" onclick="toggleSave(this)"><i class="bi bi-bookmark"></i></button>
                <button class="bi bi-search" onclick="window.location='<%= post_show_path(post) %>'"></button>
            </div>
        </div>
    <% end %>
</body>