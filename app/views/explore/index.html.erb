<h1>This will be the explore page guys!</h1>

<h4>Search for a post!</h4>
    <%= form_tag(home_path, mehtod: :get) do %>
        <%= text_field(:search, params[:search]) %>
        <%= submit_tag ("Search") %>
    <% end %>

    <% if @posts.present? %>
        <% @posts.each do |post| %>
            <ul>
                <li><%= link_to post.content, post_show_url(post)%></li>
            </ul>
        <% end %>
    <% end %>