<h1>Notifications</h1>

<div class="table-responsive">
  <table class="table table-hover">

    <thead class="table-primary">
      <tr>
        <th>From</th>
        <th>Notification</th>
        <th>Source</th>
        <th>Action</th>
      </tr>
    </thead>

    <tbody>
      <% @notifications.each do |notification| %>
        <tr>
          <td><%= notification.sender.name %></td>
          <td><%= notification.content %></td>
          <td class="text-nowrap">
            <%= link_to 'Go to source', post_show_path(notification.notifiable) %> 
            <td><%= button_to "Mark Read", read_notifications_path(notification), method: :delete, data: { turbo: false }, class: "btn btn-sm btn-danger" %></td>

          </td>
        </tr>
      <% end %>
    </tbody>

  </table>
</div>

<p>
   <%= link_to 'Back', notifications_path, class: 'btn btn-primary' %>
</p>

