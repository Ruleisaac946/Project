<head>
    <%= stylesheet_link_tag 'post' %>
    <%= javascript_include_tag 'home_page' %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">

<body>
    <% @posts.each do |post| %>
        <div class = "post card mb-3">
            <%= post.content %>
            <div class="picture"><%= image_tag post.picture, class: 'img-fluid' if post.picture.attached? %></div>
            <div class="butons">
                <button class="heart-btn" onclick="toggleHeart(this)"><i class="bi bi-heart"></i></button>

                <%# <button><i class="bi bi-chat"></i></button> %>
                <%= link_to '', comment_path(post), class: 'bi bi-chat' %>
                <%= form_with(model: [post, Repost.new], url: create_repost_post_path(post), method: :post) do |form| %>
                  <%= form.button '<i class="bi bi-arrow-repeat"></i>'.html_safe, type: 'submit', class: 'repost-btn' %>
                <% end %>

                <button class="save-btn" onclick="toggleSave(this)"><i class="bi bi-bookmark"></i></button>
                <button class="bi bi-search" onclick="window.location='<%= post_show_path(post) %>'"></button>
            </div>
            <div class = "user">
              <div>Posted by: <%=post.user.name%></div>
            </div>
        </div>
    <% end %>
</body>